<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="70sp"
    android:elevation="1dp"
    android:transitionName="@string/recipe_transition_name"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="5sp"
            android:text="@string/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bottom_navigation_background"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recipe_picture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:transitionName="@string/recipe_photo_transition_name"
            app:layout_constraintBottom_toTopOf="@id/recipe_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="20"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeTop10" />

        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:transitionName="@string/recipe_name_transition_name"
            app:layout_constraintTop_toBottomOf="@id/recipe_picture"
            app:layout_constraintBottom_toTopOf="@id/recipe_ingredients" />

        <TextView
            android:id="@+id/recipe_ingredients"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="10sp"
            android:gravity="center|top"
            android:text="@string/todo_design"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipe_description"
            app:layout_constraintVertical_weight="30" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>